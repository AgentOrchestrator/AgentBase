{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "jsxImportSource": "react",
    "types": ["node"]
  },
  "include": ["cli/**/*"],
  "exclude": ["node_modules"]
}
